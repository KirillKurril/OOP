                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="S23" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" PreviewMouseDown="PositionSelected"/>
                <StackPanel x:Name="S22" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1" PreviewMouseDown="PositionSelected"/>
                <StackPanel x:Name="S21" VerticalAlignment="Top" Grid.Row="0" Grid.Column="2" PreviewMouseDown="PositionSelected"/>
