                <StackPanel x:Name="S13" VerticalAlignment="Top" Grid.Row="0" Grid.Column="11" PreviewMouseDown="PositionSelected"/>
                <StackPanel x:Name="S12" VerticalAlignment="Top" Grid.Row="0" Grid.Column="12" PreviewMouseDown="PositionSelected"/>
                <StackPanel x:Name="S0" VerticalAlignment="Bottom" Grid.Row="1" Grid.Column="0" PreviewMouseDown="PositionSelected"/>
                <StackPanel x:Name="S1" VerticalAlignment="Bottom" Grid.Row="1" Grid.Column="1" PreviewMouseDown="PositionSelected"/>
